{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "strict": true,
        "target": "ESNext",
        "noImplicitAny": false,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "./src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types",
            "src/types.d.ts"
        ],
        "lib": [
            "DOM",
            "ES6",
            "ES2022.Object"
        ],
        "declarationMap": true
    },
    "exclude": [
        "**/*.test.ts",
        "dist",
        "webpack",
        "jest.config.js" // Exclude the Jest config file
    ]
}