{
    "compilerOptions": {
        "strict": true,
        "target": "es6",
        "noImplicitAny": false,
        "moduleResolution": "bundler",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "typeRoots": [
            "node_modules/@types",
            "types.d.ts"
        ]
    },
    "compileOnSave": true
}