{
    "compileOnSave": true,
    "compilerOptions": {
        "strict": true,
        "declaration": false,
        "target": "ESNext", // Corrected target option
        "baseUrl": "./",
        "skipLibCheck": true,
        "noImplicitAny": false,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": false,
        "sourceMap": false,
        "outDir": "dist/js",
        "noEmitOnError": true,
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "ES6",
            "ES2022"
        ],
        "noEmit": true,
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "ts-node": {
        // these options are overrides used only by ts-node
        // same as the --compilerOptions flag and the TS_NODE_COMPILER_OPTIONS environment variable
        "compilerOptions": {
            "module": "commonjs"
        }
    },
    "exclude": [
        "dist",
        "node_modules",
        ".git",
        "webpack",
        "jest.config.js", // Exclude the Jest config file
        "**/*.test.ts",
    ]
}