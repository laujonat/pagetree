{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "strict": true,
        "lib": [
            "esnext"
        ],
        "esModuleInterop": true,
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "incremental": true
    },
    "exclude": [
        "node_modules",
        "**/tests/*",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.test.js"
    ]
}