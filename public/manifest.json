{
    "manifest_version": 3,
    "name": "PageTree Visualizer",
    "description": "Visualize distribution of DOM nodes in the document tree",
    "version": "1.0",
    "minimum_chrome_version": "116",
    "options_ui": {
        "page": "options.html"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "js/vendor.js",
                "js/content_script.js"
            ],
            "all_frames": true,
            "match_about_blank": true,
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "js/background.js"
    },
    "action": {
        "default_title": "Visualize Document Tree",
        "default_sidepanel": "sidepanel.html",
        "default_icon": {
            "16": "icons/icon-inactive.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon-inactive.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "scripting",
        "storage",
        "sidePanel",
        "contextMenus"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}